{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "outDir": "./out",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "jsx": "preserve",
        "jsxFactory": "Taro.createElement",
        "allowJs": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@wmeimob",
            "global.d.ts"
        ],
        "paths": {
            "~/*": [
                "src/*"
            ],
            "@wmeimob/weapp-design": [
                "src/modules/weapp-design/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "config",
        "dist",
        "*.js"
    ],
    "compileOnSave": false
}
